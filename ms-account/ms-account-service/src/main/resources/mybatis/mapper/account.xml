    <if test="update_time != null">
      <![CDATA[ `update_time` = #{update_time}, ]]>
    </if>
    <where>
      <if test="user_id != null">
        <![CDATA[ AND `user_id` = #{user_id} ]]>
      </if>
      <if test="where_version != null">
        <![CDATA[ AND `version` = #{where_version} ]]>
